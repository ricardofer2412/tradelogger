<div class='main'>
    <div class='graph'>
        <div>
            <img src={{companyData.logo}} alt="">
        <h2>{{companyData.name}}</h2>
        <h5>{{quoteData.c}}({{quoteData.dp}}%) Today</h5>
        </div>
        <div class=''>
            This is graph
        </div>
        <div>
            
        </div>
    </div>
  
    <div class='stockList-div'>
        <h4>Buy {{companyData.ticker}}</h4>
        <form action='/stock/quote/{{companyData.ticker}}' method='POST'>
            <h4 name='ticker' name='ticker' value={{companyData.ticker}}></h4>
            <label>
                  

               Market Price
                <input  type='number' id='marketPrice' name='entryPrice' value= {{quoteData.c}}> 
            </label>
            <label>
                Shares:
                <input type='number' id='sharesNumber' name='sharesNumber' value='0' />
            </label>
            <h4>Estimated Cost</h4>
            <h2 id='estimateValue' name='tradeValue'>$0</h2>
            <button type='submit'>Buy</button>
            <p>Buying Power Available: ${{accountMoney}} </p>

        </form>

        <button onclick="calculatePrice()" id='calculateTotal'>Calculate Estimate</button>
        
        <div class="comment-form">
            <h2>Create a new comment</h2>
                <form action="/post-create" method="POST">
                    <textarea type="text" name="content"> </textarea>
                <button type="submit"> Submit </button>
            </form>
        </div>


    </div>
</div>
