<div>
    <div class='graph'>
        <div>
            <img src={{companyData.logo}} alt="">
        <h2>{{companyData.name}}</h2>
        <h4>{{quoteData.c}}</h4>
        </div>
        <div class=''>
            This is graph
        </div>
        <div>
            <p>Buying Power</p>
            <p>$100,000</p>
        </div>
    </div>
  
    <div class='stockList-div'>
        <h4>Buy {{companyData.ticker}}</h4>
        <form action='/stock/quote/{{companyData.ticker}}' method='POST'>
            <h4 name='ticker' name='ticker' value={{companyData.ticker}}></h4>
            <label>
                  

               Market Price
                <input  type='number' id='marketPrice' name='entryPrice' value= {{quoteData.c}}> 
            </label>
            <label>
                Shares:
                <input type='number' id='sharesNumber' name='sharesNumber' value='0' />
            </label>
            <h4>Estimated Cost</h4>
            <h2 id='estimateValue' name='tradeValue'>$0</h2>
            <button type='submit'>Buy Now</button>
            <p>Buying Power Available: ${{accountMoney}} </p>

        </form>

        <button onclick="calculatePrice()" id='calculateTotal'>Calculate Estimate</button>

        <div class='comments'>
            
            <h2 name='ticker'>Comments:</h2>
                {{#each commentFromDb}}   
                    </div>
                        <hr>
                            <h4>{{this.content}}</h4>
                            <a href="{{this._id}}/update">Update</a>
                            <form action="/delete-comment" method="post">
                            <button>Delete</button>
                            </form>
                          
                        <hr>
                    <div>
                {{/each}}

        <div class="comment-div">
            <h2>Create a new comment</h2>
            <form class="comment-form" action="/stock/comments" method="post">
               Ticker: <input type="text" name="ticker" value="{{companyData.ticker}}">
               Comment: <textarea type="text" name="content"> </textarea>
                <button type="submit"> Submit </button>
            </form>
        </div>
            
           
        </div>


    </div>
</div>
