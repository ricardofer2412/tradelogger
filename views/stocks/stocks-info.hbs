<div>
    <div class='graph'>
        <div>
            <img src={{companyData.logo}} alt="">
        <h2>{{companyData.name}}</h2>
        <h4>{{quoteData.c}}</h4>
        </div>
        <div class=''>
            This is graph
        </div>
        <div>
            <p>Buying Power</p>
            <p>$100,000</p>
        </div>
    </div>
  
    <div class='stockList-div'>
        <h4>Buy {{companyData.ticker}}</h4>
        <form actions='/trades/create' method='post'>
            <label>
               Market Price
               
       
                {{quoteData.c}}
            </label>
            <label>
                Shares:
                <input type='number' name='sharesNumber' />
            </label>
        
            <h4>Estimated Cost = </h4>
      
            <button type='submit'>Buy</button>
            <p>Buying Power Available: </p>
        
        
        </form>

        <button onclick="calculatePrice()" id='calculateTotal'>Calculate Estimate</button>

        <div class='comments'>
            <h2>Comments:</h2>
                {{#each commentFromDb}}   
                    </div>
                        <hr>
                            <h4>{{this.content}}</h4>
                        <hr>
                    <div>
                {{/each}}

        <div class="comment-div">
            <h2>Create a new comment</h2>
            <form class="comment-form" action="/stock/comments" method="post">
               Ticker: <input type="text" name="ticker" value="{{companyData.ticker}}">
               Comment: <textarea type="text" name="content"> </textarea>
                <button type="submit"> Submit </button>
            </form>
        </div>
            
           
        </div>


    </div>
</div>


